<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbkg"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="175dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="360dp"
        android:layout_centerInParent="true"
        android:text="Party Planner"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcomeMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/appNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:text="Planear eventos con tranquilidad"
        android:textSize="21sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/welcomeMessageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_gravity="center"
        android:alpha="1"
        android:background="@drawable/button_bkg"
        android:onClick="openLoginActivity"
        android:text="Iniciar SesiÃ³n"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_bkg"
        android:onClick="openRegisterActivity"
        android:text="Registro"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Botón para cerrar sesión -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:onClick="logout" />

    </LinearLayout>

    <!-- Lista de fiestas -->
    <ListView
        android:id="@+id/fiestaListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice" />

    <!-- Mensaje si no hay fiestas asociadas -->
    <TextView
        android:id="@+id/noFiestasMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Aún no tienes asociadas fiestas"
        android:visibility="gone" />

    <!-- Botón para crear fiesta -->
    <Button
        android:id="@+id/crearFiestaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Crear Fiesta"
        android:onClick="crearFiesta" />
</RelativeLayout>


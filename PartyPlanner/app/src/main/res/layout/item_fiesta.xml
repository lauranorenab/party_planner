<?xml version="1.0" encoding="utf-8"?><!-- res/layout/item_fiesta.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNombreFiesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Nombre de la fiesta"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textFechaFiesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Fecha de la fiesta"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textPresupuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Presupuesto de la fiesta"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonEditFiesta"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/button_bkg"
            android:src="@drawable/baseline_edit_24"
            android:contentDescription="Editar" />

        <ImageButton
            android:id="@+id/buttonDeleteFiesta"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/button_bkg"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Eliminar" />
    </LinearLayout>
</LinearLayout>
